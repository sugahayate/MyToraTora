<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/toratoraTitle"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/height"
        android:layout_marginTop="144dp"
        android:text="@string/toratora_title"
        android:textAlignment="center"
        android:textSize="@dimen/text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/katou"
        android:layout_width="98dp"
        android:layout_height="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/oba"
        app:layout_constraintTop_toBottomOf="@+id/toratoraTitle"
        app:srcCompat="@drawable/katou" />

    <ImageButton
        android:id="@+id/oba"
        android:layout_width="102dp"
        android:layout_height="109dp"
        android:layout_marginTop="112dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toratoraTitle"
        app:srcCompat="@drawable/oba" />

    <ImageButton
        android:id="@+id/tora"
        android:layout_width="101dp"
        android:layout_height="105dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/oba"
        app:layout_constraintTop_toBottomOf="@+id/toratoraTitle"
        app:srcCompat="@drawable/tora" />
</androidx.constraintlayout.widget.ConstraintLayout>